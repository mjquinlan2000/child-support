!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'Child Support'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Child Support'}"}
    = stylesheet_link_tag "application", media: "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body{'ng-app' => 'childSupportApp'}
    -# application layout styled for Bootstrap 2.3
    / %header
    /   = render 'layouts/navigation'
    %main{:role => "main"}
      %navbar.navbar.navbar-default.navbar-fixed-top.col-sm-12
        %ul.nav.navbar-nav.pull-right
          %li
            %a{'ng-href' => '{{referenceService.backReference}}', 'ng-show' => 'referenceService.backReference'} BACK
      .content
        .container{'ng-view' => true}
      %footer
