%input{type: 'text', 'ng-model' => 'client.name', 'ng-change' => 'onClientChanged()'}
%br
%select{'ng-model' => 'client.gender_id', 'ng-options' => 'gender.id as gender.name for gender in genders', 'ng-change' => 'onClientChanged()'}

%table.table.table-striped
  %thead
    %tr
      %th Type
      %th Amount
  %tbody
    %tr{'ng-repeat' => 'record in client_records'}
      %td
        %select{'ng-model' => 'record.record_type_id', 'ng-options' => 'rt.id as rt.name for rt in record_types', 'ng-change' => 'onClientRecordChanged(record)'}
      %td
        %input{type: 'number', 'ng-model' => 'record.amount', 'ng-change' => 'onClientRecordChanged(record)'}

%button.btn.add-button.pull-right{'ng-click' => 'addClientRecord()'} ADD ENTRY