.row
  .col-xs-12.col-md-6.col-lg-3
    %label E-Mail
    %input.form-control{type: 'email', 'ng-model' => 'user.email'}
  .col-xs-12.col-md-6.col-lg-3
    %label Password
    %input.form-control{type: 'password', 'ng-model' => 'user.password'}
  .col-xs-12
    %button.btn.btn-success.pull-right{'ng-click' => 'signIn()'} Sign In